{
    "name": "ts-insp",
    "version": "0.0.1",
    "description": "Tool to visualize typescript dependencies in a project",
    "main": "dist/index.js",
    "author": "Klemeesi",
    "license": "Apache-2.0",
    "bin": {
        "ts-insp": "./bin/ts-insp"
    },
    "types": "./src/types.d.ts",
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    },
    "dependencies": {
        "commander": "^12.0.0",
        "node-html-to-image": "^4.0.0",
        "typescript": "^5.3.3",
        "uuidv4": "^6.2.13"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.21",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2"
    },
    "scripts": {
        "start": "node dist/index.js",
        "build": "tsc",
        "quick": "yarn build && yarn start -c ts-insp.config.ts",
        "test": "jest",
        "postinstall": "node -e \"process.env.npm_config_user_agent.includes('npm') ? 'npm' : 'yarn'\" | xargs -I{} {} run build"
    }
}
